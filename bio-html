  <audio id="clickSound" src="https://www.soundjay.com/button/beep-07.wav" preload="auto"></audio>

  <script>
    const pageBody = document.getElementById("pageBody");
    const defaultBG = pageBody.style.background;
    const clickSound = document.getElementById("clickSound");
    const yearSpan = document.getElementById("year");

    yearSpan.textContent = new Date().getFullYear();

    function changeBG(colors) {
      pageBody.style.background = `linear-gradient(135deg, ${colors})`;
      pageBody.style.backgroundSize = '400% 400%';
    }

    function resetBG() {
      pageBody.style.background = defaultBG;
    }

    function playClick() {
      clickSound.currentTime = 0;
      clickSound.play();
    }

    function copyPUBGID() {
      playClick();
      const pubgID = "5244570649";
      navigator.clipboard.writeText(pubgID).then(() => {
        alert("تم نسخ ID البوبجي: " + pubgID);
      }).catch(err => {
        alert("تعذر نسخ ID، انسخه يدويًا: " + pubgID);
      });
    }

    // إضافة الصوت لكل الروابط أيضًا
    document.querySelectorAll('.social-links a').forEach(link => {
      link.addEventListener('click', playClick);
    });
  </script>
